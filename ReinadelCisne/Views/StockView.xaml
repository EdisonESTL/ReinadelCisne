            </Grid>
            -->
            
            
            <Grid Grid.Row="9" Grid.ColumnSpan="2"
                  Margin="0,18,0,0">
                <Button Text="Borrar"
                    Command="{Binding Cancel}" Grid.Column="0" Style="{StaticResource ButtonCancel}"/>
                <Button Text="Guardar"
                    Command="{Binding Save}" Grid.Column="1" Style="{StaticResource ButtonSave}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>