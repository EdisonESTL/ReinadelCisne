<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ReinadelCisne.ViewModels" 
             xmlns:autocomplete="clr-namespace:Syncfusion.SfAutoComplete.XForms;assembly=Syncfusion.SfAutoComplete.XForms"
             x:Class="ReinadelCisne.Views.ShoppingView"
             Title="Nueva compra"
             BackgroundColor="#E4E4E4">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"/>
    </Shell.BackButtonBehavior>
    <ContentPage.BindingContext>
        <vm:ShoppingVM/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Label Text="{Binding Product.NameProduct}" 
                   Grid.Row="0"
                   Style="{StaticResource LabelTittlesColLectionView}"
                   FontSize="Title"/>           
            <Label Text="{Binding Product.DescriptionProduct}" 
                   Grid.Row="1"
                   Style="{StaticResource LabelTittles1}"
                   FontSize="Subtitle"/>
            <Grid Margin="0,20,0,0"
                  RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                  RowSpacing="10">
                <Label Text="Cantidad actual"
                   Grid.Row="0" Grid.Column="0"
                   Style="{StaticResource LabelTittlesColLectionView}"/>
                <Label Text="{Binding Product.CantProduct}" 
                       Grid.Row="1" Grid.Column="0"
                       Style="{StaticResource LabelTittles1}"/>

                <Label Text="Ultimo precio de compra" 
                   Grid.Row="0" Grid.Column="1"
                   Style="{StaticResource LabelTittlesColLectionView}"/>
                <Label Text="{Binding Product.CostElaboracionProduct}" 
                       Grid.Row="1" Grid.Column="1"
                       Style="{StaticResource LabelTittles1}"/>
            </Grid>
            <BoxView HeightRequest="1" Color="Red"/>
            <Grid Margin="0,0,0,20"
                  RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                  RowSpacing="10">               

                <Label Text="Compra" 
                       Grid.Row="2" Grid.Column="0"
                       Style="{StaticResource LabelTittlesColLectionView}"
                       HorizontalOptions="Start"
                       FontSize="Subtitle"
                       FontAttributes="Bold,Italic"/>
                <Label Text="Cantidad" 
                       Grid.Row="3" Grid.Column="0"
                       Style="{StaticResource LabelTittlesColLectionView}"/>
                <Entry Style="{StaticResource Entry1}"
                       Grid.Row="4" Grid.Column="0"/>
                <Label Text="Precio de compra:" 
                       Grid.Row="3" Grid.Column="1"
                       Style="{StaticResource LabelTittlesColLectionView}"/>
                <Entry Style="{StaticResource Entry1}"
                       Grid.Row="4" Grid.Column="1"/>
<!--
                <RadioButton Content="Pagado" TextColor="Black"
